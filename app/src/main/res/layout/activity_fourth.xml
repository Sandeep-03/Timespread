<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ramky.timespread.FourthActivity">

    <ImageView
        android:id="@+id/imv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Spread"
        android:textStyle="bold"
        android:fontFamily="exo 2 light"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/imv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Personal Assistant"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimary"
        android:textSize="13dp"
        android:layout_below="@+id/tv1"
       android:layout_centerHorizontal="true" />

    <EditText
    android:id="@+id/et1"
    android:layout_width="240dp"
    android:layout_height="50dp"
        android:fontFamily="roboto-bold"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/tv2"
    android:hint="abc@xyz.com"
    android:textSize="23dp"
    android:textAlignment="center"
    android:layout_marginTop="30dp"
    android:background="@drawable/shape"/>

    <EditText
        android:id="@+id/et2"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et1"
        android:password="true"
        android:hint="Password"
        android:fontFamily="roboto-bold"
        android:textSize="23dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"/>
    <EditText
        android:id="@+id/et3"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et2"
        android:password="true"
        android:hint="Confirm Password"
        android:textSize="23dp"
        android:fontFamily="roboto-bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et3"
        android:fontFamily="roboto-bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Finish"
        android:textAllCaps="false"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:background="@color/orange"
        />
    <View
        android:id="@+id/v1"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/oval"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="42dp"
        android:layout_marginBottom="40dp"
        />
    <View
        android:id="@+id/v2"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/ovalgreen"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/v1"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="40dp"
        />
    <View
        android:id="@+id/v3"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/ovalorange"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/v2"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="40dp"
        />
    <View
        android:id="@+id/v4"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/ovalwhite"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/v3"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="40dp"
        />
    <TextView
        android:id="@+id/tc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="roboto medium"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:textSize="12dp"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:text="By Clicking Finish You Agree To Our"/>
    <TextView
        android:id="@+id/tc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="roboto medium"
        android:layout_alignParentBottom="true"
        android:textSize="12dp"
        android:layout_centerHorizontal="true"
        android:text="Terms &amp; Conditions"
        android:clickable="true"
        android:textStyle="bold"
        />

</RelativeLayout>