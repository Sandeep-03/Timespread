<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ramky.timespread.NinthActivity">

    <ImageView
        android:id="@+id/imv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Spread"
        android:fontFamily="exo 2 light"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/imv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Personal Assistant"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/tv1"
        android:fontFamily="sans-serif-light"

        android:layout_marginLeft="108dp"
        android:textSize="13dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Looking For Aliens"
        android:fontFamily="sans-serif-light"

        android:textColor="@color/colorPrimary"
        android:textSize="19dp"
        />
    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Trying To Connect"
        android:fontFamily="sans-serif-light"

        android:textColor="@color/colorPrimary"
        android:textSize="19dp"
        />
    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv4"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"

        android:layout_marginTop="20dp"
        android:text="Connection Established"
        android:textColor="@color/colorPrimary"
        android:textSize="19dp"
        />
    <View
        android:id="@+id/v1"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/oval"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="30dp"
        />
    <View
        android:id="@+id/v2"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/ovalgreen"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/v1"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        />
    <View
        android:id="@+id/v3"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/ovalorange"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/v2"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        />
    <View
        android:id="@+id/v4"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/ovalblue"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/v3"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        />
</RelativeLayout>