<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ramky.timespread.ClassSchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/MyTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/circle1"
        android:id="@+id/badge"
        android:text="vk"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rollno"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:clickable="true"
        android:textColor="@color/blue"
        android:text="Change Password"
        android:background="@android:color/transparent"/>


    <ImageButton
        android:id="@+id/pencil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pencil"
        android:layout_toEndOf="@+id/name"
        android:layout_below="@id/badge"
        android:layout_marginTop="42dp"
        android:background="@color/white"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:text="vamsikrishna97@gmail.com"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/pencil1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pencil"
        android:layout_toEndOf="@+id/email"
        android:layout_below="@id/name"
       android:layout_marginTop="5dp"
        android:background="@color/white"
        android:layout_marginLeft="10dp"/>
    <Button
        android:id="@+id/club"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/change"
        android:layout_toLeftOf="@+id/subjects"
        android:layout_marginRight="20dp"
        android:fontFamily="roboto-regular"
        android:paddingTop="5dp"
        android:background="@android:color/transparent"
        android:textSize="10dp"

        android:drawableTop="@drawable/clubs"
        android:text="Clubs"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/subjects"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/change"
        android:layout_marginTop="60dp"
        android:fontFamily="roboto-regular"
        android:paddingTop="5dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/book"
        android:text="Subjects"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/fav"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/change"
        android:layout_toRightOf="@+id/subjects"
        android:layout_marginLeft="20dp"
        android:fontFamily="roboto-regular"
        android:paddingTop="5dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/favourites"
        android:text="Favourites"
        android:textSize="10dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact"
        android:clickable="true"
        android:text="Contact Us"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textSize="22dp"
        android:textColor="@color/blue"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedback"
        android:clickable="true"
        android:text="Feedback"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textSize="22dp"
        android:textColor="@color/blue"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:text="Vamsi Krishna"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/badge"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/rollno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:text="14ucs130"
        android:background="@android:color/transparent"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
